{
  "name": "vscode-persian-copilot",
  "displayName": "VSCode Persian Copilot",
  "description": "VSCode Persian Copilot - RTL support for Persian/Farsi text in VS Code chat interface",
  "version": "1.0.1",
  "publisher": "shahkochaki",
  "repository": {
    "type": "git",
    "url": "https://github.com/shahkochaki/vscode-persian-copilot.git"
  },
  "homepage": "https://github.com/shahkochaki/vscode-persian-copilot#readme",
  "bugs": {
    "url": "https://github.com/shahkochaki/vscode-persian-copilot/issues"
  },
  "author": {
    "name": "Ali Shahkochaki",
    "email": "shahkochaki@hotmail.com"
  },
  "license": "MIT",
  "keywords": [
    "persian",
    "farsi",
    "rtl",
    "right-to-left",
    "copilot",
    "chat",
    "iran"
  ],
  "engines": {
    "vscode": "^1.102.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "vscode-persian-copilot.applyChatRTL",
        "title": "Apply Persian CSS to Chat",
        "category": "Persian Copilot"
      },
      {
        "command": "vscode-persian-copilot.toggleAutoApply",
        "title": "Toggle Auto Apply",
        "category": "Persian Copilot"
      },
      {
        "command": "vscode-persian-copilot.disableCSS",
        "title": "Remove Persian CSS",
        "category": "Persian Copilot"
      }
    ],
    "configuration": {
      "title": "Persian Copilot",
      "properties": {
        "persian-copilot.autoApply": {
          "type": "boolean",
          "default": true,
          "description": "Automatically apply Persian CSS when VS Code starts"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.102.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "eslint": "^9.25.1",
    "esbuild": "^0.25.3",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.8.3",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2"
  }
}
